{
  "name": "spr-main",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && tsc --noEmit",
    "preview": "vite preview",
    "deploy": "bun run build && npx wrangler deploy",
    "cf-typegen": "wrangler types",
    "lint": "next lint",
    "db:create": "wrangler d1 create spravzni-db",
    "db:migrate": "wrangler d1 execute spravzni-db --remote --file=./migrations/001_add_texts_and_media.sql",
    "db:migrate:local": "wrangler d1 execute spravzni-db --local --file=./migrations/001_add_texts_and_media.sql",
    "db:migrate:donations": "wrangler d1 execute spravzni-db --remote --file=./migrations/003_add_donations.sql",
    "db:migrate:donations:local": "wrangler d1 execute spravzni-db --local --file=./migrations/003_add_donations.sql",
    "db:migrate:all": "wrangler d1 execute spravzni-db --remote --file=./schema.sql",
    "db:migrate:all:local": "wrangler d1 execute spravzni-db --local --file=./schema.sql",
    "db:query": "wrangler d1 execute spravzni-db",
    "db:query:local": "wrangler d1 execute spravzni-db --local",
    "r2:create": "wrangler r2 bucket create spravzni-storage",
    "deploy:setup": "bun run db:create && bun run r2:create && bun run db:migrate",
    "media:upload": "bun scripts/upload-media.js",
    "video:upload": "bash scripts/upload-video.sh",
    "i18n:init": "echo 'Initialize translations by adding them to D1 texts table'"
  },
  "dependencies": {
    "@cloudflare/vite-plugin": "1.13.19",
    "@tanstack/react-router": "1.136.11",
    "@tanstack/react-start": "1.136.11",
    "@unpic/react": "^1.0.1",
    "clsx": "^2.1.1",
    "lenis": "^1.3.16",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "resend": "^6.6.0",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.5.9",
    "postcss": "^8.4.35",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.7.2",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.45.4"
  },
  "packageManager": "bun@latest"
}
